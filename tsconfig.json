{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "files":[
    "./app.ts"
  ],
  "include":[
    "./node_server/",
    "./models/",
    "./ng_client/"
  ],
  "exclude":[
    "./node_modules/**/*.*"
  ]
}